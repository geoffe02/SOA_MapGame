<h1>Listing Map Coordinate Area Detail</h1>

<h2>Import Map</h2>
<%= form_tag import_mapspaces_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<p>
<%= flash[:notice] %>
<table class = "table table-striped">
  <thead>
    <tr>
     <th style="text-align: center;">Location Number</th>
     <th style="text-align: center;">Latitude</th>
     <th style="text-align: center;">Longitude</th>
     <th style="text-align: center;">Area</th>
    </tr>
  </thead>
  <tbody>
   <% @mapspaces.each do |mapspace| %>
    <tr>
      <td style="text-align: center;"><%= mapspace.location_number %></td>
      <td style="text-align: center;"><%= mapspace.latitude %></td>
      <td style="text-align: center;"><%= mapspace.longitude %></td>
      <td style="text-align: center;"><%= mapspace.name %></td>
    </tr>
   <% end %>
  </tbody>
</table>


        
